{
  "name": "chain",
  "description": "A React web3 toolkit for building accessible and performant applications.",
  "version": "0.2.1",
  "bugs": "https://github.com/b-bot/chain/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/b-bot/chain.git",
    "directory": "packages/ui"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "prettier": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 0",
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "publish": "yarn build && np"
  },
  "peerDependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^0.2.4",
    "@stitches/react": "1.2.6",
    "ethers": "^5.6.8",
    "next-themes": "^0.2.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "wagmi": "^0.4.11"
  },
  "devDependencies": {
    "@storybook/react": "^6.4.19",
    "@types/node": "^17.0.19",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "eslint": "^8.17.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "tsconfig": "*",
    "tsup": "^6.1.2",
    "typescript": "^4.5.5"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
